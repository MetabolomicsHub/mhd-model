    "version": "0.2.0",
    "configurations": [
        {
            "name": "mhd-model: Run Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "justMyCode": false
        },
        {
            "name": "mhd-model: Update Documentation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/update_documentation.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "justMyCode": false
        },

        {
            "name": "mhd-model: Validate MHD File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/validate_mhd_file.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "justMyCode": false
        },
        {
            "name": "mhd-model: Create Announcement File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/create_announcement_file.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "justMyCode": false
        },
        {
            "name": "mhd-model: Create SDRF File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/create_sdrf_files.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "justMyCode": false
        },


    ]
